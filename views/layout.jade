doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='A modern Express application with a beautiful dark theme design')
    meta(name='theme-color', content='#121212')
    title= title
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    header
      .container
        .navbar
          .logo #{title}
          ul.nav-links
            li
              a(href='/') Home
            li
              a(href='#') About
            li
              a(href='#') Services
            li
              a(href='#') Contact

    main
      block content

    footer
      .container
        .footer-content
          .footer-section
            h3 About Us
            p We are a passionate team dedicated to creating amazing web experiences with Express and Node.js.

          .footer-section
            h3 Quick Links
            ul
              li
                a(href='/') Home
              li
                a(href='#') About
              li
                a(href='#') Services
              li
                a(href='#') Contact

          .footer-section
            h3 Contact Info
            ul
              li
                i.fas.fa-map-marker-alt
                |  123 Web Dev Lane
              li
                i.fas.fa-phone
                |  (123) 456-7890
              li
                i.fas.fa-envelope
                |  info@example.com

        .footer-bottom
          p &copy; #{new Date().getFullYear()} #{title}. All rights reserved.
